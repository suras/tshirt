<%= stylesheet_link_tag "products","user_settings",:media=>"all" %>
<section class="user-settings">
<div class="container">
    <div class="row">
        <div class="span12">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#profile" data-target="#profile" data-toggle="tab">Profile</a>

                </li>
                <li><a href="#order" data-target="#order" data-toggle="tab">Order Details</a>

                </li>
                <li><a href="#products" data-target="#products" data-toggle="tab">Products Details</a>

                </li>
            </ul>
            <div class="tab-content category-billing">
                   <%= simple_form_for @billing, :url => profile_billing_path() do |f| %>
                    <%= f.input :first_name %>
                    <%= f.input :last_name %>
                    <%= f.input :country %>
                    <%= f.input :state %>
                    <%= f.input :city %>
                    <%= f.input :address1 %>
                    <%= f.input :address2 %>
                    <%= f.input :postal_code %>
                    <%= f.button :submit %>
                   <% end %>
            </div>
             <div class="tab-content category-shipping">
                  <p>shipping</p>
                   <%= simple_form_for @shipping, :url => profile_shipping_path() do |f| %>
                    <%= f.input :first_name %>
                    <%= f.input :last_name %>
                    <%= f.input :country %>
                    <%= f.input :state %>
                    <%= f.input :city %>
                    <%= f.input :address1 %>
                    <%= f.input :address2 %>
                    <%= f.input :postal_code %>
                    <%= f.button :submit %>
                   <% end %>
            </div>

            <div class="tab-content category-profile">
                   <%= simple_form_for @user, :url => save_user_path do |f| %>
                    <%= f.input :email %>
                    <%= f.input :username %>
                    <%= f.input :password %>
                    <%= f.input :mobile %>
                    <%= f.button :submit %>
                   <% end %>
            </div>

            <div class="tab-content category-products">
                <div class="tab-pane active fade in" id="profile">Profile tab content</div>
                <div class="tab-pane" id="order">Order tab content</div>
                <div class="tab-pane" id="products">
                	<div class="span9 product-list">
				<div class="all-products">
			        <%@user_items.each do |item|%>
			              <p><%=item.title%></p>
			              <p><%=item.design_notes%></p>
			              <p><%=item.created_at%></p>
                          <p><img src="<%=item.image.url%>"/></p>
                          <p><img src="<%=item.image1.url%>"/></p>

			        <% end %>
				</div>
			</div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>


<script type="text/javascript">
	$(document).ready(function(){
		$(document).on("click",".show-full",function(){
			$(".close-full").each(function(){
				$(this).trigger("click")
			});
			$(".all-products").prepend($(this).closest(".product-list-item"));
			$(this).closest(".product-list-item").find(".thumb").hide(200);
			$(this).closest(".product-list-item").find(".full-details").show();
			$(this).closest(".product-list-item").find(".close-full").removeClass("hide");
			$(window).scrollTop(70);
			return false;
		});

		$(document).on("click",".close-full",function(){
			$(this).closest(".product-list-item").find(".thumb").show();
			$(this).closest(".product-list-item").find(".close-full").addClass("hide");
			$(this).closest(".product-list-item").find(".full-details").hide(200);
			return false;
		});

		$(document).on("click",".full-details .images img",function(){
			$(this).closest(".full-details").siblings(".left-side").find(img).attr("src",$(this).attr("src"));
			
		});
	});
</script>